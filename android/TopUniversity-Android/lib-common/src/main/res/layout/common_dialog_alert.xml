<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_centerInParent="true"
        android:background="@drawable/common_dialog_bg">


        <TextView
            android:id="@+id/common_alert_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="@string/common_title"
            android:textColor="@color/common_c_222222"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/common_alert_dialog_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="73dp"
            android:gravity="center"
            android:layout_marginRight="32dp"
            android:text="@string/common_content"
            android:textColor="@color/common_c_8A8A8A"
            android:textSize="16sp">

        </TextView>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="56dp"
            android:background="#BFBFBF">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/common_dialog_bottom_corner_bg">

            <TextView
                android:id="@+id/common_alert_dialog_cancel_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/common_cancel"
                android:textColor="@color/common_c_222222"
                android:textSize="18sp">

            </TextView>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#BFBFBF"></View>


            <TextView
                android:id="@+id/common_alert_dialog_confirm_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/common_confirm"
                android:textColor="@color/common_c_097CFF"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>