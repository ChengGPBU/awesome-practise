<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/white_corner_10_bg"
    android:orientation="vertical"
    android:paddingBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_school_introduction"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxLength="20"
            android:singleLine="true"
            android:text="学校简介"
            android:textColor="@color/common_text_content"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/school_jianjie_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:maxLines="6"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:textColor="@color/common_text_alert"
            android:textSize="14sp"
            tools:text="fasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdgfasdghjahsdgaksdg"></TextView>

        <!--           学校简介-->

        <include
            layout="@layout/include_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            ></include>

        <TextView
            android:id="@+id/school_jianjie_content_more_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="查看更多"
            android:textColor="@color/common_text_content"
            android:textSize="14sp">

        </TextView>


    </LinearLayout>


</LinearLayout>