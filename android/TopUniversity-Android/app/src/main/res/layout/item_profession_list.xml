<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profession_banner_item_l"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/white_corner_10_bg"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:paddingBottom="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_recommend_profession_name_tv"
            style="@style/home_item_profession_content"
            android:textColor="@color/common_text_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="资源与环境经济学">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <RelativeLayout
            style="@style/home_item_profession_rl_bg"
            android:background="@color/white">

            <TextView
                style="@style/home_item_profession_title"
                android:layout_marginLeft="0dp"
                android:text="层次："
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:id="@+id/item_recommend_profession_level1_tv"
                style="@style/home_item_profession_content"
                android:textSize="14sp"
                tools:text="本科">

            </TextView>

        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:visibility="gone"
            android:background="@color/common_text_alert"
            android:layout_height="match_parent" />

        <RelativeLayout
            style="@style/home_item_profession_rl_bg"
            android:background="@color/white">

            <TextView
                style="@style/home_item_profession_title"
                android:text="门类："
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:id="@+id/item_recommend_profession_level3_tv"
                style="@style/home_item_profession_content"
                android:textSize="14sp"
                tools:text="哲学类">

            </TextView>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <RelativeLayout
            style="@style/home_item_profession_rl_bg"
            android:background="@color/white">

            <TextView
                style="@style/home_item_profession_title"
                android:layout_marginLeft="0dp"
                android:text="学位："
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:id="@+id/item_recommend_profession_degree_tv"
                style="@style/home_item_profession_content"
                android:textSize="14sp"
                tools:text="经济学学士">

            </TextView>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:visibility="gone"
            android:background="@color/common_text_alert"
            android:layout_height="match_parent" />

        <RelativeLayout
            style="@style/home_item_profession_rl_bg"
            android:background="@color/white">

            <TextView
                style="@style/home_item_profession_title"
                android:text="学制："
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:id="@+id/item_recommend_profession_limit_tv"
                style="@style/home_item_profession_content"
                android:textSize="14sp"
                tools:text="四年">

            </TextView>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>