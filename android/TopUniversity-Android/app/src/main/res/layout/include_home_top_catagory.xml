<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:src="@drawable/home_img_bg">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/white_corner_10_bg"
        android:orientation="horizontal">

        <LinearLayout style="@style/home_linearlayout">

            <ImageView
                style="@style/home_linearlayout_img"
                android:src="@drawable/ic_school"></ImageView>

            <TextView
                style="@style/home_linearlayout_text"
                android:text="大学排名">

            </TextView>
        </LinearLayout>

        <LinearLayout style="@style/home_linearlayout">

            <ImageView
                style="@style/home_linearlayout_img"
                android:src="@drawable/ic_school_subject"></ImageView>

            <TextView
                style="@style/home_linearlayout_text"
                android:text="专业解读">

            </TextView>
        </LinearLayout>

        <LinearLayout style="@style/home_linearlayout">

            <ImageView
                style="@style/home_linearlayout_img"
                android:src="@drawable/ic_score"></ImageView>

            <TextView
                style="@style/home_linearlayout_text"
                android:text="高考百科">

            </TextView>
        </LinearLayout>

        <LinearLayout style="@style/home_linearlayout">

            <ImageView
                style="@style/home_linearlayout_img"
                android:src="@drawable/ic_student"></ImageView>

            <TextView
                style="@style/home_linearlayout_text"
                android:text="招生计划">

            </TextView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>